    "Filippo De Santis (https://github.com/p16)",
    "Mihai Dima (https://github.com/mihaidma)",
    "Paolo Chiodi (https://github.com/paolochiodi)",
    "Paul Negrutiu (https://github.com/floridemai)",
    "Mark Ireland (https://github.com/irelandm)",
    "Michael O'Brien (https://github.com/mobri3n)",
    "Michele Capra (https://github.com/piccoloaiutante)",
    "Nicolas Herment (https://github.com/nherment)",
    "Salman Mitha (https://github.com/salmanm)"
  ],
  "homepage": "https://github.com/nearform/labs-authorization#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/labs-authorization.git"
  },
  "bugs": {
    "url": "https://github.com/nearform/labs-authorization/issues"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "bench": "node ./bench/util/runner.js",
    "coverage": "npm run pg:init-test-db && LABS_AUTH_SERVICE_logger_pino_level=silent lab -c -t 95 -r html -o docs/coverage.html",
    "coveralls": "npm run pg:init-test-db && LABS_AUTH_SERVICE_logger_pino_level=silent lab -c -t 95 -r lcov | coveralls",
    "lint": "standard",
    "pg:init": "LABS_AUTH_SERVICE_local=true node database/init.js && npm run pg:migrate",
    "pg:init-test-db": "npm run pg:init && npm run pg:load-test-data",
    "pg:load-test-data": "LABS_AUTH_SERVICE_local=true node database/loadTestData.js",
    "pg:migrate": "node database/migrate.js --version=2",
    "start": "node lib/server/start.js",
    "test": "npm run pg:init-test-db && LABS_AUTH_SERVICE_logger_pino_level=silent lab -c -t 95",
    "test:commit-check": "npm run lint && npm run test"
  },
  "pre-commit": [
    "test:commit-check"
  ],
  "dependencies": {
    "async": "2.1.4",
    "hapi": "16.0.1",
    "hapi-pino": "1.3.0",
    "hapi-swagger": "7.5.0",
    "iam-js": "nearform/iam-js",
    "inert": "4.0.3",
    "joi": "10.0.5",
    "jsonfile": "2.4.0",
    "lodash": "^4.17.3",
    "minimist": "1.2.0",
    "pg": "6.1.1",
    "reconfig": "3.2.0",
    "uuid": "^3.0.1",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "autocannon": "0.16.0",
    "bloomrun": "^3.0.3",
    "code": "4.0.0",
    "coveralls": "^2.11.15",
    "lab": "11.2.1",
    "pg-copy-streams": "^1.2.0",
    "pino": "3.0.5",
    "postgrator": "2.8.2",
    "pre-commit": "1.2.2",
    "proxyquire": "1.7.10",
    "standard": "^8.6.0"
  }
}
