{
  "name": "udaru",
  "version": "4.1.0",
  "description": "A policy based authorization module",
  "license": "MIT",
  "author": "nearForm Ltd",
  "contributors": [
    "Andrew Cashmore (https://github.com/andrewcashmore)",
    "Damian Beresford (https://github.com/dberesford)",
    "Dean McDonnell (https://github.com/mcdonnelldean)",
    "Filippo De Santis (https://github.com/p16)",
    "Florian Traverse (https://github.com/temsa)",
    "Mihai Dima (https://github.com/mihaidma)",
    "Paolo Chiodi (https://github.com/paolochiodi)",
    "Paul Negrutiu (https://github.com/floridemai)",
    "Mark Ireland (https://github.com/irelandm)",
    "Michael O'Brien (https://github.com/mobri3n)",
    "Michele Capra (https://github.com/piccoloaiutante)",
    "Nicolas Herment (https://github.com/nherment)",
    "Salman Mitha (https://github.com/salmanm)",
    "William Riley-Land (https://github.com/wprl)"
  ],
  "homepage": "https://github.com/nearform/udaru#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/udaru.git"
  },
  "bugs": {
    "url": "https://github.com/nearform/udaru/issues"
  },
  "main": "packages/udaru-core/index.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "bench": "node ./bench/util/runner.js",
    "bench-volume": "node ./bench/util/volumeRunner.js",
    "test:security": "node ./security/runner.js",
    "pretest:security": "napa sqlmapproject/sqlmap",
    "coverage": "npm run pg:init-test-db && lerna run coverage",
    "coveralls": "npm run pg:init-test-db && lerna run coveralls",
    "outdated:all": "npm outdated || echo 'Outdated packages found.'; lerna exec \"npm outdated || echo 'Outdated packages found.'\"",
    "update:all": "npm update && lerna exec npm update",
    "lint": "standard",
    "postinstall": "lerna bootstrap",
    "doc:lint": "remark .",
    "pg:init": "UDARU_SERVICE_local=true node database/init.js && npm run pg:migrate",
    "pg:init-test-db": "npm run pg:init && npm run pg:load-test-data",
    "pg:load-test-data": "UDARU_SERVICE_local=true node database/loadTestData.js",
    "pg:init-volume-db": "npm run pg:init && npm run pg:load-volume-data",
    "pg:load-volume-data": "UDARU_SERVICE_local=true node database/loadVolumeData.js",
    "pg:migrate": "node database/migrate.js --version=7",
    "start": "node packages/udaru-server/start.js",
    "test": "npm run pg:init-test-db && lerna run test",
    "test:commit-check": "npm run doc:lint && npm run lint && npm run test",
    "swagger-gen": "node scripts/getSwaggerJson.js | swagger-gen -d docs/swagger && node scripts/injectUdaruSwaggerCss.js"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "pre-commit": [
    "test:commit-check"
  ],
  "dependencies": {
    "@nearform/sql": "^1.0.0",
    "async": "^2.6.0",
    "hapi": "^16.6.2",
    "hapi-pino": "^1.7.0",
    "hapi-swagger": "^7.10.0",
    "inert": "^4.2.1",
    "joi": "^10.6.0",
    "jsonfile": "^3.0.1",
    "lodash": "^4.17.5",
    "minimist": "^1.2.0",
    "pbac": "0.3.0",
    "pg": "^7.4.1",
    "pino": "^4.10.3",
    "postgrator": "^2.10.3",
    "reconfig": "3.2.0",
    "uuid": "^3.2.1",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "autocannon": "^2.0.1",
    "bloomrun": "^3.0.3",
    "chalk": "^2.3.1",
    "code": "^4.0.0",
    "coveralls": "^2.11.15",
    "csvtojson": "^1.1.9",
    "eslint": "^3.8.1",
    "lab": "^14.3.2",
    "lerna": "^2.5.1",
    "lodash-addons": "^2.0.1",
    "napa": "^2.3.0",
    "native-hdr-histogram": "^0.4.6",
    "nopt": "^4.0.1",
    "pre-commit": "^1.2.2",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.0",
    "remark-preset-lint-recommended": "^3.0.0",
    "standard": "^8.6.0",
    "swagger-gen": "^1.1.3"
  },
  "standard": {
    "ignore": [
      "docs/*"
    ]
  }
}
